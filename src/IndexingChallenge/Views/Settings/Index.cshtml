@model IndexingChallenge.Models.Setting

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h2>Settings</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Goal" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Goal" class="form-control" />
                <span asp-validation-for="Goal" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Unit" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UnitPlural" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UnitPlural" class="form-control" />
                <span asp-validation-for="UnitPlural" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

