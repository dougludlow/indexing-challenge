@{
    ViewData["Title"] = "Indexing Challenge";
}

<style>
    .loading {
        min-height: 70%;
        min-height: 70vh;

        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<indexing-challenge>
    <p class="loading">
        <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
        <span class="sr-only">Loading...</span>
    </p>  
</indexing-challenge>

@section scripts {
    <environment names="Development">
        <script>System.import('indexing-challenge').catch(console.error.bind(console));</script>
    </environment>
    <environment names="Staging,Production">
        <script>System.import('indexing-challenge').catch(console.error.bind(console));</script>
    </environment>
}