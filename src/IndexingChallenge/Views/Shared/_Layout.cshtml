@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Indexing Challenge</title>

    <link rel="stylesheet" href="/jspm_packages/npm/font-awesome@4.6.3/css/font-awesome.css">
    <link rel="stylesheet" href="/styles/styles.css" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Indexing Challenge</a>
            </div>
            <div class="navbar-collapse collapse">
                @if (SignInManager.IsSignedIn(User))
                {
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Entries" asp-action="Index">Entries</a></li>
                    </ul>
                }
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - Doug Ludlow</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="/jspm_packages/system.src.js"></script>
        <script src="/jspm.config.js"></script>
        <script src="/bundle.js"></script>
        <script>System.trace = true;</script>
        <script>System.import('bootstrap-sass').catch(console.error.bind(console));</script>
    </environment>
    <environment names="Staging,Production">
        <script src="/jspm_packages/system.js"></script>
        <script src="/jspm.config.js"></script>
        <script src="/bundle.js"></script>
        <script>System.import('bootstrap-sass').catch(console.error.bind(console));</script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
